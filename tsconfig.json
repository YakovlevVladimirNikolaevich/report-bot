{
    "compilerOptions": {
        "module": "es2015",
        "target": "ES2017",
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "sourceMap": true,
        "declarationDir": "./types/",
        "diagnostics": true,
        "incremental": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "strictNullChecks": true,
        "noResolve": true
    },
    "files": [
        {
            "exclude": "./node_modules"
        }
    ]
}
